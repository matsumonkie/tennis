server {
  listen 80;
  server_name tennis.com;

  location ~ ^/api/(.*)$ {
    proxy_pass http://backend/$1;
  }

  location ~ \.html$ {
    root /home/iori/work/tennis/html;
  }

  location ~ (\.js)$ {
    root /home/iori/work/tennis/script;
  }

  location ~ (\.css)$ {
    root /home/iori/work/tennis/assets/bower_components;
  }

  location ~ (\.elm)$ {
    proxy_pass http://frontend;
  }

  location / {
    index index.html;
  }
}

upstream backend {
  server 0.0.0.0:3000;
}

upstream frontend {
  server 0.0.0.0:3001;
}